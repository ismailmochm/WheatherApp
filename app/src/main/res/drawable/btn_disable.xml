<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/greyBd">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="10dp" />
            <stroke android:width="1dp" android:color="@color/greyE0" />
            <gradient android:angle="-90" android:startColor="@color/greyE0" android:endColor="@color/greyE0"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="10dp" />
            <stroke android:width="1dp" android:color="@color/greyE0" />
            <solid android:color="@color/greyE0"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="10dp" />
            <stroke android:width="1dp" android:color="@color/greyE0" />
            <gradient android:angle="-90" android:startColor="@color/greyE0" android:endColor="@color/greyE0" />
        </shape>
    </item>
</ripple>